@model kalea2.Models.Vehiculos

@if (ViewBag.Mensaje != null)
{

    <body onload="My_onLoad('@ViewBag.Mensaje')">
    </body>
}
else if (ViewBag.Exitoso != null)
{
    <body onload="My_onLoad2('@ViewBag.Exitoso')">
    </body>
}

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Base Horizontal Form With Icons -->
                <div class="form-element py-30 multiple-column">
                    <h4 class="font-20 mb-20">Editar vehiculo</h4>
                    <!-- Form -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Codigo)

                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- Form Group -->
                                    <div class="form-group">

                                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Ingrese una descripción para el vehículo" } })
                                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!-- End Form Group -->
                                    <!-- Form Group -->
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Ingrese número de placa de vehículo" } })
                                            @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!-- End Form Group -->
                                    <!-- Form Group -->
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Piloto, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.Piloto, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Ingrese nombre de piloto" } })
                                            @Html.ValidationMessageFor(model => model.Piloto, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TrasladoSiNo, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.DropDownListFor(modelItem => modelItem.TrasladoSiNo, Model.TrasladosSiNo,
                                                                  " -- Vehiculo para traslado --", new { @class = "theme-input-style" })
                                            @Html.ValidationMessageFor(model => model.TrasladoSiNo, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <!-- End Form Group -->
                                </div>

                                <div class="col-lg-6">
                                    <!-- Form Group -->
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PesoCarga, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.PesoCarga, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Peso de carga", @type = "number" } })
                                            @Html.ValidationMessageFor(model => model.PesoCarga, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!-- End Form Group -->
                                    <!-- Form Group -->
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.VolumenCarga, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.VolumenCarga, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Volumen de carga", @type = "number" } })
                                            @Html.ValidationMessageFor(model => model.VolumenCarga, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HoraInicioLabores, htmlAttributes: new { @class = "font-14 bold mb-2" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.HoraInicioLabores, new { htmlAttributes = new { @class = "theme-input-style", @placeholder = "Volumen de carga" } })
                                            @Html.ValidationMessageFor(model => model.HoraInicioLabores, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <!-- End Form Group -->
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-12 text-right">
                                    <button type="submit" class="btn long">Guardar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- End Horizontal Form With Icons -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function My_onLoad(mensaje) {
            Swal.fire({ title: "Error!", text: mensaje, type: "error", confirmButtonClass: "btn long", buttonsStyling: !1 });
        }
    </script>

    <script type="text/javascript">
        function My_onLoad2(mensaje) {
            Swal.fire({ title: "Excelente!", text: mensaje, type: "success", confirmButtonClass: "btn long", buttonsStyling: !1 });
        }
    </script>

}